<div class="author">
    <h1 class="author__heading">Hi, I'm Andrew.</h1>
    <p class=""author__body>Weird engineer.</p>
</div>

<img src = "insert image" alt= "insert" class="hero-image" width="981" height="528">

<section class = "articles-ul">
    <h2 class="articles__heading">Latest articles</h2>
    <ul class = "article-ul">

        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class ="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>

    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>



</section>